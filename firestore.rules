
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rule for user-specific product options
    // Allows ANYONE to READ these specific product option documents (needed for public embeds using configUserId).
    // WRITE access is still restricted to the authenticated user whose UID matches the {userId} in the path.
    match /userProductOptions/{userId}/products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for user-specific WooCommerce credentials
    // This remains restrictive: only the authenticated user can access their own credentials.
    match /userWooCommerceCredentials/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Add other rules for other collections here if needed.

    // Default rule: Deny all reads and writes to any other paths not explicitly matched above.
    // This is a security best practice.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
