
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own product options, credentials, and store configurations
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /userProductOptions/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
     match /userWooCommerceCredentials/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
     match /userShopifyCredentials/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /userStores/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public read access for generated store data
    match /userStores/{userId} {
       allow get: if true;
    }
     match /users/{userId}/products/{productId} {
       allow get: if true;
    }
     match /userProductOptions/{userId}/products/{productId} {
       allow get: if true;
    }
  }
}
