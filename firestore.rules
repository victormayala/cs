
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the owner of the document.
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // USER-SPECIFIC, PRIVATE DATA
    // Only the authenticated user can read or write their own credentials.
    match /userWooCommerceCredentials/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /userShopifyCredentials/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // USER-SPECIFIC PRODUCTS (NATIVE TO CUSTOMIZER STUDIO)
    // Only the owner can manage their own products.
    match /users/{userId}/products/{productId} {
      allow read, write: if isOwner(userId);
    }

    // CONFIGURATION DATA (PUBLIC READ, PRIVATE WRITE)
    // This data needs to be read by the public storefronts and customizers.
    
    // Store Configuration: Public can read, only owner can write.
    match /userStores/{userId} {
      allow read: if true;
      // Allow write only if the user is authenticated and the 'userId' in the
      // document they are writing matches their own auth UID.
      allow write: if isOwner(userId) && request.resource.data.userId == userId;
    }

    // Product Customization Options: Public can read, only owner can write.
    match /userProductOptions/{userId}/products/{productId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
  }
}
