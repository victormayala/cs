
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for admin role
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can only read their own profile, but admins can read any.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if request.auth.uid == userId;
    }

    // Product configurations can be read by their owner or any admin.
    // They can only be written by their owner.
    // Allow public read access for storefronts.
    match /userProductOptions/{userId}/products/{productId} {
      allow read: if true;
      allow write: if request.auth.uid == userId || isAdmin();
    }
    
    // Native products can be read publicly.
    // They can only be written by their owner or an admin.
    match /users/{userId}/products/{productId} {
      allow read: if true;
      allow write: if request.auth.uid == userId || isAdmin();
    }

    // User-specific credentials can only be accessed by the user who owns them.
    match /userWooCommerceCredentials/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    match /userShopifyCredentials/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Categories can only be managed by the user who owns them.
    match /users/{userId}/productCategories/{categoryId} {
        allow read, write, delete: if request.auth.uid == userId || isAdmin();
    }

    // Store configurations can be read by anyone (for public storefronts)
    // but only written by the owner or an admin.
    match /userStores/{storeId} {
        allow read: if true;
        allow write: if request.auth.uid == get(path).data.userId || isAdmin();
    }

    // Orders and Customers can only be read/written by the store owner or an admin.
    match /users/{userId}/{collection}/{docId} {
      allow read, write, delete: if request.auth.uid == userId || isAdmin();
    }
    
    // Admins can perform collection group queries on orders.
    match /{path=**}/orders/{orderId} {
      allow read: if isAdmin();
    }
  }
}
