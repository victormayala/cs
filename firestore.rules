
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Rules for user-specific data (credentials, store settings, etc.)
    match /users/{userId}/{document=**} {
      // Users can only read/write their own documents.
      allow read, write: if isOwner(userId);
    }
    
    // Rules for user-generated stores. Publicly readable for the storefront.
    match /userStores/{userId} {
       allow read: if true;
       allow write: if isOwner(userId);
    }

    // Rules for product options. Publicly readable for the customizer/storefront.
    match /userProductOptions/{userId}/products/{productId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
    
    // Shopify credentials. Publicly readable by server-side functions.
    match /userShopifyCredentials/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
    
    // WooCommerce credentials. Publicly readable by server-side functions.
    match /userWooCommerceCredentials/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
  }
}
