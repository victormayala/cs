rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for user-specific data like products and credentials.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for store configurations.
    // ANYONE can read these for public storefronts.
    // ONLY the owner can write.
    match /userStores/{userId} {
       allow read: if true;
       allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for product options.
    // ANYONE can read these for public customizers.
    // ONLY the owner can write.
    match /userProductOptions/{userId}/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for Shopify credentials.
    // Publicly readable by server-side functions (via API key), but not clients.
    // ONLY the owner can write.
    match /userShopifyCredentials/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for WooCommerce credentials.
    // Publicly readable by server-side functions (via API key), but not clients.
    // ONLY the owner can write.
    match /userWooCommerceCredentials/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
