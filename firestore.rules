
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // USER-SPECIFIC DATA
    // ===================================
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /userWooCommerceCredentials/{userId} {
      // Credentials should be private to the user.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /userShopifyCredentials/{userId} {
      // Credentials should be private to the user.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }


    // PUBLICLY READABLE CONFIGURATIONS
    // ===================================
    match /userProductOptions/{userId}/products/{productId} {
      // ANYONE can read these settings (for public storefront plugins/iframes).
      // ONLY the authenticated owner can write/update them from the dashboard.
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /userStores/{userId} {
      // ANYONE can read the store configuration for public storefront rendering.
      allow read: if true;
      // ONLY the authenticated owner can write/update.
      // We check the userId field inside the document to ensure consistency.
      allow write: if request.auth != null && request.auth.uid == userId && request.resource.data.userId == request.auth.uid;
    }
  }
}
