rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for user-specific credentials. Only the owner can read/write.
    match /userWooCommerceCredentials/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /userShopifyCredentials/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for product options. Publicly readable for the customizer, owner-only write.
    match /userProductOptions/{userId}/products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rules for user-generated stores. Publicly readable, owner-only write.
    match /userStores/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId && request.resource.data.userId == request.auth.uid;
    }

    // Rules for native products stored under a user.
    // Publicly readable for the storefront, owner-only write.
    match /users/{userId}/products/{productId} {
      allow read: if true; 
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
