rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // PUBLIC READABLE, USER-WRITABLE DATA
    
    // Store configurations: public can read, owner can write.
    match /userStores/{userId} {
      allow read: if true;
      // Allow write if the user is authenticated and the incoming data's userId matches their UID.
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Product options: public can read, owner can write.
    match /userProductOptions/{userId}/products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // NATIVE (CUSTOMIZER STUDIO) PRODUCTS
    // Public can read product info (for generated stores), owner can write.
    match /users/{userId}/products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // SECURE, USER-PRIVATE DATA

    // WooCommerce credentials should only be readable/writable by the owner.
    match /userWooCommerceCredentials/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Shopify credentials should only be readable/writable by the owner.
    match /userShopifyCredentials/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
