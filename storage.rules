
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read and write to their own folder.
    // This allows users to upload variant images and other assets for their products.
    match /{userId}/{allPaths=**} {
      allow read; // Public read access for images is generally needed.
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // 5MB limit
                   && request.resource.contentType.matches('image/.*'); // Only allow images
    }
  }
}
