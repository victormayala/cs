
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // User-specific files
    match /{userId}/{allPaths=**} {
      // Anyone can read the files (e.g., for public product images)
      allow read;

      // Only the authenticated owner of the folder can write files.
      // - Check if the user is authenticated.
      // - Check if the {userId} in the path matches the user's own UID.
      // - Check the file size is less than 5MB.
      // - Check if the file is an image.
      allow write: if request.auth != null && 
                      request.auth.uid == userId &&
                      request.resource.size < 5 * 1024 * 1024 &&
                      request.resource.contentType.matches('image/.*');
    }
  }
}
